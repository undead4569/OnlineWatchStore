{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                    {% endfor %}
            </ul>
        </div>

        <div class="heading">
            <img src="view/image/payment/vnpay.png" alt="" />
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
                    
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-accesscode">{{ entry_access_code }}</label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_vnpay_payment_access_code" value="{{ payment_vnpay_payment_access_code }}" placeholder="{{ entry_access_code }}" id="input-accesscode" class="form-control" />
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-secretkey">{{ entry_secretkey }}</label>
                    <div class="col-sm-10">
                        <input type="password" name="payment_vnpay_payment_secretkey" value="{{ payment_vnpay_payment_secretkey }}" placeholder="{{ entry_secretkey }}" id="input-secretkey" class="form-control" />
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-url">{{ entry_url }}</label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_vnpay_payment_url" value="{{ payment_vnpay_payment_url }}" placeholder="{{ entry_url }}" id="input-url" class="form-control" />
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-order-status">{{ entry_pending_status }}</label>
                    <div class="col-sm-10">
                        <select name="payment_vnpay_payment_order_pending_status_id" id="input-order-status" class="form-control">
                            {% for order_status in order_statuses %}
                            {% if order_status.order_status_id == payment_vnpay_payment_order_pending_status_id %}
                            <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                            {% else %}
                            <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                            {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-order-status">{{ entry_failed_status }}</label>
                    <div class="col-sm-10">
                        <select name="payment_vnpay_payment_order_failed_status_id" id="input-order-status" class="form-control">
                            {% for order_status in order_statuses %}
                            {% if order_status.order_status_id == payment_vnpay_payment_order_failed_status_id %}
                            <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                            {% else %}
                            <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                            {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                        
                </div>
                        
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-order-status">{{ entry_completed_status }}</label>
                    <div class="col-sm-10">
                        <select name="payment_vnpay_payment_order_status_id" id="input-order-status" class="form-control">
                            {% for order_status in order_statuses %}
                            {% if order_status.order_status_id == payment_vnpay_payment_order_status_id %}
                            <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                            {% else %}
                            <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                            {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>	

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_vnpay_payment_status" id="input-status" class="form-control">
                                {% if payment_vnpay_payment_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_vnpay_payment_sort_order" value="{{ payment_vnpay_payment_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}