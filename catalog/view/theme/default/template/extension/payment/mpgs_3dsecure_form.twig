<!doctype html>
<html>
<head>
    <head>
        <title>{{ text_secure_payment }}</title>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <meta name="description" content="{{ text_secure_payment }}"/>
        <meta name="robots" content="noindex"/>
    </head>
</head>
{% if authenticationRedirect == false %}
<body>
    <p>{{ data_error }}</p>
</body>
{% else %}
<body onload="document.forms['echoForm'].submit()">
    <form name="echoForm" method="post" action="{{ acsUrl }}" accept-charset="UTF-8"
          id="echoForm">
        <input type="hidden" name="PaReq" value="{{ paReq }}"/>
        <input type="hidden" name="TermUrl" value="{{ returnUrl }}"/>
        <input type="hidden" name="MD" value=""/>
        <noscript>
            <div id="msg">
                <div id="submitButton">
                    <input type="submit" value="Click here to continue" class="button"/>
                </div>
            </div>
        </noscript>
    </form>
</body>
{% endif %}
</html>
